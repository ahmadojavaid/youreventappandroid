<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_bg_ln"
    android:layout_width="@dimen/_230sdp"
    android:layout_height="match_parent"
    android:background="@drawable/bg_drawer"
    android:orientation="vertical">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40sdp"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/drawer_logo_img"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_yea" />


                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:src="@drawable/profile_placeholder"
                    android:visibility="gone" />


                <customfonts.TextView_fira_sans_medium
                    android:id="@+id/userName_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:text="user name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/drawer_Text_size"
                    android:textStyle="bold" />

                <customfonts.TextView_fira_sans_light
                    android:id="@+id/userEmail_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/email"
                    android:textColor="@color/white"
                    android:textSize="@dimen/drawer_Text_size" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"

                    android:layout_height="@dimen/_510sdp">

                    <ImageView
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:src="@drawable/drawer_line_vertical" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/menu_con"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="vertical">


                    <FrameLayout
                        android:id="@+id/messageContainer"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/envelop_tv"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_email"

                            />


                        <customfonts.TextView_fira_sans_light
                            android:id="@+id/messageCounter_tv"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_gravity="right"

                            android:layout_margin="@dimen/_5sdp"
                            android:layout_toRightOf="@+id/envelop_tv"
                            android:background="@drawable/circle_red"
                            android:gravity="center"
                            android:text="9+"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8sdp"
                            android:visibility="gone" />

                    </FrameLayout>

                    <customfonts.TextView_fira_sans_light
                        android:id="@+id/feed_tv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/drawer_meun_height"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/feed"
                        android:textColor="@color/white"
                        android:textSize="@dimen/drawer_Text_size" />

                    <ImageView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:src="@drawable/drawer_line_horizontal"
                        android:visibility="visible" />


                    <customfonts.TextView_fira_sans_light
                        android:id="@+id/profile_tv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/drawer_meun_height"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/your_profile"
                        android:textColor="@color/white"
                        android:textSize="@dimen/drawer_Text_size" />


                    <ImageView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:src="@drawable/drawer_line_horizontal" />

                    <customfonts.TextView_fira_sans_light
                        android:id="@+id/leatherboards_tv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/drawer_meun_height"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/leaderboards"
                        android:textColor="@color/white"
                        android:textSize="@dimen/drawer_Text_size" />

                    <ImageView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:src="@drawable/drawer_line_horizontal" />

                    <customfonts.TextView_fira_sans_light
                        android:id="@+id/speakers_tv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/drawer_meun_height"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/speakers"
                        android:textColor="@color/white"
                        android:textSize="@dimen/drawer_Text_size" />

                    <ImageView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:src="@drawable/drawer_line_horizontal" />

                    <customfonts.TextView_fira_sans_light
                        android:id="@+id/attendes_tv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/drawer_meun_height"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/attendees"
                        android:textColor="@color/white"
                        android:textSize="@dimen/drawer_Text_size" />

                    <ImageView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:src="@drawable/drawer_line_horizontal" />


                    <customfonts.TextView_fira_sans_light
                        android:id="@+id/meetings_tv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/drawer_meun_height"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/meetings"
                        android:textColor="@color/white"
                        android:textSize="@dimen/drawer_Text_size" />

                    <ImageView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:src="@drawable/drawer_line_horizontal" />

                    <customfonts.TextView_fira_sans_light
                        android:id="@+id/sponser_tv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/drawer_meun_height"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/sponsors"
                        android:textColor="@color/white"
                        android:textSize="@dimen/drawer_Text_size" />

                    <ImageView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:src="@drawable/drawer_line_horizontal" />

                    <customfonts.TextView_fira_sans_light
                        android:id="@+id/agenda_tv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/drawer_meun_height"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/agenda"
                        android:textColor="@color/white"
                        android:textSize="@dimen/drawer_Text_size" />

                    <ImageView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:src="@drawable/drawer_line_horizontal" />

                    <customfonts.TextView_fira_sans_medium
                        android:id="@+id/logout_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="top|center"
                        android:paddingTop="@dimen/_15sdp"
                        android:singleLine="true"
                        android:text="@string/logout"
                        android:textColor="@color/white"
                        android:textSize="@dimen/drawer_Text_size"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</LinearLayout>

