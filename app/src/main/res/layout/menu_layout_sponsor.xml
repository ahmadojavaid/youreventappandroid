<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_bg_ln"
    android:layout_width="@dimen/_230sdp"
    android:layout_height="match_parent"
    android:background="@drawable/bg_drawer"
    android:orientation="vertical">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40sdp"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/drawer_logo_img"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_yea" />


                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_15sdp"

                    android:src="@drawable/profile_placeholder"
                    android:visibility="gone" />


                <customfonts.TextView_fira_sans_medium
                    android:id="@+id/userName_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:text="user name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/drawer_Text_size"
                    android:textStyle="bold" />

                <customfonts.TextView_fira_sans_light
                    android:id="@+id/userEmail_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/email"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_250sdp">

                    <ImageView
                        android:layout_width="@dimen/_3sdp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/drawer_line_sponsor" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/menu_con"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="right"
                    android:orientation="vertical">


                    <customfonts.TextView_fira_sans_light
                        android:id="@+id/profile_tv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/drawer_meun_height"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/profile"
                        android:textColor="@color/white"
                        android:textSize="@dimen/drawer_Text_size" />


                    <ImageView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:src="@drawable/drawer_line_horizontal" />


                    <customfonts.TextView_fira_sans_light
                        android:id="@+id/attendes_tv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/drawer_meun_height"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/attendees"
                        android:textColor="@color/white"
                        android:textSize="@dimen/drawer_Text_size" />

                    <ImageView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:src="@drawable/drawer_line_horizontal" />


                    <customfonts.TextView_fira_sans_light
                        android:id="@+id/meetings_tv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/drawer_meun_height"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/meetings"
                        android:textColor="@color/white"
                        android:textSize="@dimen/drawer_Text_size" />

                    <ImageView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:src="@drawable/drawer_line_horizontal" />


                    <customfonts.TextView_fira_sans_light
                        android:id="@+id/agenda_tv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/drawer_meun_height"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/agenda"
                        android:textColor="@color/white"
                        android:textSize="@dimen/drawer_Text_size" />

                    <ImageView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:src="@drawable/drawer_line_horizontal" />

                    <customfonts.TextView_fira_sans_medium
                        android:id="@+id/logout_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="top|center"
                        android:paddingTop="@dimen/_15sdp"
                        android:singleLine="true"
                        android:text="@string/logout"
                        android:textColor="@color/white"
                        android:textSize="@dimen/drawer_Text_size"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</LinearLayout>

