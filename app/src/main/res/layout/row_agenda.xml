<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/feed_margin_left"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginRight="@dimen/feed_margin_right"
    android:background="#EEEEEE"
    android:elevation="@dimen/_2sdp"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/imagesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/vertical_line_ln"
            android:layout_width="@dimen/_5sdp"
            android:layout_height="match_parent"
            android:background="@color/orange_app"
            android:orientation="vertical">

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <customfonts.TextView_fira_sans_medium
                            android:id="@+id/title_agenda"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_toLeftOf="@+id/calander_img"
                            android:paddingRight="@dimen/_40sdp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp"

                            />

                        <ImageView
                            android:id="@+id/calanderImage"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_alignParentRight="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_calender_agenda" />
                    </RelativeLayout>


                    <customfonts.TextView_fira_sans_light
                        android:id="@+id/time_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"

                        />


                    <LinearLayout
                        android:id="@+id/locationCOn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/calanderImage"
                        android:gravity="right"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/location_img"
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_location_orange" />

                        <customfonts.TextView_fira_sans_light
                            android:id="@+id/location_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingRight="@dimen/_3sdp"
                            android:singleLine="true"
                            android:text=""
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>