<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_marginRight="@dimen/_20sdp"
    android:background="@drawable/bottom_line">

    <RelativeLayout
        android:id="@+id/headerUser"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:visibility="visible">


        <ImageView
            android:id="@+id/single_image_profile_iv"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/profile_placeholder" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/follow_container"
            android:layout_toRightOf="@+id/single_image_profile_iv"
            android:gravity="center"
            android:orientation="vertical">

            <customfonts.TextView_fira_sans_medium
                android:id="@+id/single_image_feed_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Shaun Linton"
                android:textColor="@color/blue_dark"
                android:textSize="@dimen/feed_userName_text_size" />

            <customfonts.TextView_fira_sans_light
                android:id="@+id/company_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Company Name"
                android:textColor="@color/black"
                android:textSize="@dimen/feed_userName_text_time" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/follow_container"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/menuImage"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@color/yellow_app"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/follow"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_2sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/single_image_privacy_icon"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/ic_clock" />

                <customfonts.TextView_fira_sans_light
                    android:id="@+id/single_image_timeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:singleLine="true"
                    android:text="2 hrs"
                    android:textColor="@color/black"
                    android:textSize="@dimen/feed_userName_text_time" />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>