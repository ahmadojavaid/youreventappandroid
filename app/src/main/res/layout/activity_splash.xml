<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/background_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/splash_bg_blue" />

    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_200sdp"
        android:alpha="0.5"
        android:scaleType="fitXY"
        android:src="@drawable/splash_oval" />

    <ImageView
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_above="@+id/bottom_con"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_60sdp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_yea" />


    <RelativeLayout
        android:id="@+id/bottom_con"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_240sdp"
        android:layout_alignParentBottom="true">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/bottom_image_splash" />

        <ImageView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_53sdp"
            android:layout_alignParentRight="true"
            android:elevation="@dimen/_2sdp"
            android:scaleType="fitXY"
            android:src="@drawable/welcome_btn" />
    </RelativeLayout>


</RelativeLayout>