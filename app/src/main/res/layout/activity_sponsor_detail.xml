<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_lines"
    tools:context=".AttendeArea.Activities.SponsorDetailActivity">

    <include layout="@layout/layout_header_back_with_calender" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_header"
        android:fillViewport="true"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_20sdp">

            <ImageView
                android:id="@+id/userimage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:background="@color/white"
                android:scaleType="centerCrop" />

            <customfonts.TextView_fira_sans_medium
                android:id="@+id/company_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/_10sdp"

                android:text="Amazon"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />


            <WebView
                android:id="@+id/mywebview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </WebView>


            <customfonts.TextView_fira_sans_bold
                android:id="@+id/sponsor_ship_lvl_txt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/sponsor_ship_lvl"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:background="@color/white">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_medal" />

                <LinearLayout
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/medal_icon"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_gold"
                        android:visibility="gone" />

                    <customfonts.TextView_fira_sans_bold
                        android:id="@+id/level_name_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:text="Gold "
                        android:textAllCaps="true"
                        android:textColor="@color/yellow_app"
                        android:textSize="@dimen/_15sdp" />


                </LinearLayout>


            </RelativeLayout>


            <!--<customfonts.TextView_fira_sans_medium-->
            <!--android:id="@+id/webLink_tv"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/_40sdp"-->
            <!--android:background="@color/yellow_app"-->
            <!--android:gravity="center"-->
            <!--android:text="www.google.com"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="@dimen/_14sdp" />-->

            <customfonts.TextView_fira_sans_bold
                android:id="@+id/visitWeb_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"

                android:background="@color/yellow_app"
                android:gravity="center"
                android:singleLine="true"
                android:text="visit website"
                android:textAllCaps="true"
                android:textColor="@color/white"

                android:textSize="@dimen/_12sdp" />

            <customfonts.TextView_fira_sans_bold
                android:id="@+id/contact_us_txt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/contact_us"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/social_share_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp"

                android:visibility="visible">

                <ImageView
                    android:id="@+id/insta_img"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/ic_insta" />

                <ImageView
                    android:id="@+id/facebook_img"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/ic_fb" />

                <ImageView
                    android:id="@+id/twitter_img"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/ic_twitter" />

                <ImageView
                    android:id="@+id/linnked_img"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/ic_linked_in" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>