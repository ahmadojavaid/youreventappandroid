<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/headerUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/orange_line"
            android:layout_width="@dimen/_5sdp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/yellow_app"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toLeftOf="@+id/calander_img"
            android:layout_toRightOf="@+id/orange_line"
            android:gravity="left|center"
            android:orientation="vertical">

            <customfonts.TextView_fira_sans_medium
                android:id="@+id/session_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Stream6 - London Market"
                android:textColor="@color/blue_bg_color"
                android:textSize="@dimen/_12sdp" />

            <customfonts.TextView_fira_sans_medium
                android:id="@+id/session_venue_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stream6 - London Market"
                android:textColor="@color/blue_bg_color"
                android:textSize="@dimen/_11sdp" />

            <customfonts.TextView_fira_sans_medium
                android:id="@+id/session_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_2sdp"
                android:singleLine="true"
                android:text="15:30 - 16:30"
                android:textColor="@color/text_color_grey"
                android:textSize="@dimen/_11sdp" />


        </LinearLayout>


        <ImageView
            android:id="@+id/calander_img"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentRight="true"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_calender_agenda" />

    </RelativeLayout>
</RelativeLayout>